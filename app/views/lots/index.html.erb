<h1>Lot Number Log</h1>

<table>
  <thead>
    <tr>
      <th>Lot Number</th>
      <th>Item</th>
      <th>Initial Quantity</th>
      <th>Current Quantity</th>
      <th>Cleaned</th>
      <th>Status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @lots.each do |lot| %>
      <tr>
        <td><%= link_to lot.number, lot_path(lot.id) %></td>
        <td><%= link_to Item.find(lot.item_id).name_and_number, item_path(Item.find(lot.item_id).id) %></td>
        <td><%= lot.initial_qty %></td>
        <td><%= lot.current_qty %></td>
        <td><%= lot.cleaned %></td>
        <td><%= lot.status %></td>
        <td><%= link_to 'Show', lot %></td>
        <td><%= link_to 'Edit', edit_lot_path(lot) %></td>
        <td><%= link_to 'Destroy', lot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lot', new_lot_path %>
