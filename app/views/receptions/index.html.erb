<h1>Receiving Log</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Purchase Order</th>
      <th>Remaining on PO</th>
      <th>Quantity</th>
      <th>Description</th>
    </tr>
  </thead>

  <tbody>
    <% @receptions.each do |reception| %>
      <tr>
        <td><%= reception.date %></td>
        <% if reception.purchase_order_id %>
          <td><%= reception.purchase_order.purchase_order_number %></td>
          <td><%= reception.purchase_order.quantities.first.amount_remaining %><td>
              <!-- TODO FIX BUG - pick correct quantities, not just the first one -->
        <% end %>
        <td><%= reception.quantity %></td>
        <td><%= reception.description %></td>
        <td><%= link_to 'Show', reception %></td>
        <td><%= link_to 'Edit', edit_reception_path(reception) %></td>
        <td><%= link_to 'Destroy', reception, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reception', new_reception_path %>
